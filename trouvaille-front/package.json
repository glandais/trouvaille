{
  "name": "trouvaille-front",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/ public/ *.json *.md contract.yaml",
    "format:check": "prettier --check src/ public/ *.json *.md contract.yaml",
    "generate:api": "npm run generate:api:clean && npm run generate:api:generate",
    "generate:api:clean": "rm -rf src/api",
    "generate:api:generate": "openapi-generator-cli generate -i contract.yaml -g typescript-axios -o src/api --additional-properties=supportsES6=true,npmName=@trouvaille/api,modelPropertyNaming=snake_case,stringEnums=true"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@toast-ui/editor": "^3.2.2",
    "@vueuse/core": "^13.4.0",
    "axios": "^1.10.0",
    "dompurify": "^3.2.6",
    "localstorage-slim": "^2.7.1",
    "lodash-es": "^4.17.21",
    "pinia": "^3.0.3",
    "vue": "^3.5.17",
    "vue-i18n": "^11.1.7",
    "vue-preview-imgs": "^2.0.1",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.21.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tsconfig/node22": "^22.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.0.7",
    "@vitejs/plugin-basic-ssl": "^2.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.29.0",
    "eslint-plugin-vue": "~10.2.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.0",
    "vite": "^6.3.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^2.2.10"
  },
  "overrides": {
    "dompurify": "^3.2.6"
  }
}
