# OAuth Configuration
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=https://yourdomain.com/oauth/callback

# HTTP Port Configuration
# Traefik will expose the application on this port
HTTP_PORT=8090

# Traefik Dashboard Port (localhost only)
TRAEFIK_DASHBOARD_PORT=8080

# MongoDB Configuration (Production)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-secure-password-in-production

# Application Configuration
QUARKUS_LOG_LEVEL=INFO

# CORS Configuration (for production with your domain)
CORS_ORIGINS=https://yourdomain.com,http://localhost:8090

# Development vs Production
ENVIRONMENT=production

# Security (Development only)
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=change-this-admin-password